{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildv",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-fsanitize=address",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-I",
                "/${workspaceFolder}/src/",
                "-I",
                "/usr/local/include/monosat",
                "${workspaceFolder}/src/transaction/transaction.cpp",
                "${workspaceFolder}/src/graph/graph.cpp",
                "${workspaceFolder}/src/graph/transitive_closure.cpp",
                "${workspaceFolder}/src/verifier/vbox.cpp",
                "${workspaceFolder}/src/verifier/leopard.cpp",
                "${workspaceFolder}/src/solver/constraint.cpp",
                "${workspaceFolder}/src/solver/solver.cpp",
                "${workspaceFolder}/src/main.cpp",
                "-L/usr/local/lib", 
                "-lmonosat",
                "-o",
                "${workspaceFolder}/build/verifier"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for building the SerVerifier executable with MonoSAT library"
        }
    ]
}